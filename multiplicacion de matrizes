#include<stdio.h>
#include<stdlib.h>
#include<time.h>
int main()
{


	int n,i,j,suma=0;
	srand(time(NULL));
	printf("ingrese la longitud de la matriz: \n");
	scanf("%d", &n);
	
	int A[n][n], B[n][n], C[n][n];
	
	printf("Matriz A: \n");
	for(i=0; i<n; i++)
	{
		for(j=0; j<n; j++)
		{
			A[i][j]=rand()%10;
			printf("|%d| ", A[i][j]);
		}
		printf(" \n\n");
	}
	
	printf("Matriz B: \n");
	for(i=0; i<n; i++)
	{
		for(j=0; j<n; j++)
		{
			B[i][j]=rand()%10;
			printf("|%d| ", B[i][j]);
		}
		printf(" \n\n");
	}

	
	return 0;
	
}
